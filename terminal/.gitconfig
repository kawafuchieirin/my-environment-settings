[user]
    # 名前とメールアドレスは個別に設定してください
    # name = Your Name
    # email = your.email@example.com

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers = true
    side-by-side = true
    syntax-theme = GitHub
    
    # ライトテーマ用設定
    light = true
    
    # 見やすさの調整
    line-numbers-left-format = "{nm:>4} "
    line-numbers-right-format = "{np:>4} "
    hunk-header-decoration-style = blue box
    hunk-header-line-number-style = purple bold
    
    # ファイル名の表示
    file-style = bold blue
    file-decoration-style = blue box
    
    # 差分の強調表示
    plus-style = syntax "#d1fae5"
    plus-emph-style = syntax "#a8dadc" 
    minus-style = syntax "#ffe0e0"
    minus-emph-style = syntax "#ffb3b3"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[pull]
    rebase = false

[push]
    autoSetupRemote = true

[alias]
    # よく使うコマンドのエイリアス
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short