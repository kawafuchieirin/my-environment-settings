# ==============================================================================
# 環境変数
# ==============================================================================
export LANG=ja_JP.UTF-8
export EDITOR=vim

# ==============================================================================
# PATH
# ==============================================================================
export PATH="$HOME/.local/bin:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"
export PATH="/opt/homebrew/bin:$PATH"

# ==============================================================================
# エイリアス
# ==============================================================================

# ファイル操作
alias ll='ls -lah'
alias la='ls -A'

# Git
alias g='git'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gl='git log --oneline'
alias gd='git diff'

# その他
alias c='clear'

# ==============================================================================
# ローカル設定（存在する場合）
# ==============================================================================
[[ -f ~/.zshrc.local ]] && source ~/.zshrc.local
